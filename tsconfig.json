{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@goods/*": ["app/*"],
      "@goods/ui-kit": ["app/shared/ui-kit"],
      "@goods/ui-kit/*": ["app/shared/ui-kit/*"],
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
